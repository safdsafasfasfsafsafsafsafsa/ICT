{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build/js",
    "target": "es2015",
    "noEmitOnError": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "strict": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
